<%
def icomoon_loader(format)
	icomoon_path = "#{app.config[:http_prefix] === '/' ? '' : app.config[:http_prefix]}/stylesheets/remark/fonts/icomoon/icomoon.css"
	return icomoon_path.sub(/\.css$/,".#{format}")
end
%>
/* Include a Twitter Icon */
@font-face {
	font-family: "icomoon";
	src: url("<%=icomoon_loader("eot")%>");
	src: url("<%=icomoon_loader("eot")%>?#iefix") format("embedded-opentype"), url("<%=icomoon_loader("woff")%>") format("woff"), url("<%=icomoon_loader("ttf")%>") format("truetype"), url("<%=icomoon_loader("svg")%>#icomoon") format("svg");
	font-weight: normal;
	font-style: normal;
}
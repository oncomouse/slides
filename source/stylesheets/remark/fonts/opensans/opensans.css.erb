<%
def opensans_loader(file)
	asset_path(:css, 'remark/fonts/opensans/opensans').sub(/opensans\.css$/,"") + file
end
%>
/* Include a Twitter Icon */

@font-face {
    font-family: 'Open Sans';
    src: url("<%=opensans_loader("OpenSans-Regular-webfont.eot")%>");
    src: url("<%=opensans_loader("OpenSans-Regular-webfont.eot?#iefix")%>") format('embedded-opentype'),
         url("<%=opensans_loader("OpenSans-Regular-webfont.woff")%>") format('woff'),
         url("<%=opensans_loader("OpenSans-Regular-webfont.ttf")%>") format('truetype'),
         url("<%=opensans_loader("OpenSans-Regular-webfont.svg#open_sansregular")%>") format('svg');
    font-weight: 400;
    font-style: normal;

}

